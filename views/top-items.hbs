{{> item-tabs route='topItems'}}
<h1>人氣商品</h1>
<hr>
<div class="row" style="text-align: center;">
  {{#each items}}
    <div class="col-3">
      <a href="/items/{{this.id}}">
        <img src="{{this.image}}" alt="image" width="170px" height="140px" class="mt-3">
      </a>
      <h6>{{this.name}}</h6>
      <span class="bg-secondary badge">收藏人數: {{this.favoriteCount}}</span>
    </div>
  {{/each}}
</div>
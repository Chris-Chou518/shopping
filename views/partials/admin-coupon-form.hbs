{{#if coupon}}
  <div class="form-row mb-3">
    <label class="form-label" for="code">Code (readonly)</label>
    <input class="form-control" type="text" id="code" name="code" placeholder="Enter code" value="{{coupon.code}}"
      readonly>
  </div>
{{else}}
  <div class="form-row mb-3">
    <label class="form-label" for="code">Code</label>
    <input class="form-control" type="text" id="code" name="code" placeholder="Enter code" value="{{coupon.code}}"
      required>
  </div>
{{/if}}
<div class="form-row mb-3">
  <label class="form-label" for="text">Text</label>
  <input class="form-control" type="text" id="text" name="text" placeholder="Enter discount description" value="{{coupon.text}}">
</div>
<div class="form-row mb-3">
  <label class="form-label" for="discount">Discount</label>
  <input class="form-control" type="number" id="discount" name="discount" placeholder="Enter discount: 10~100"
    value="{{coupon.discount}}" max="100" min="10">
</div>
<button type="submit" class="btn btn-primary">Submit</button>
<a class="btn btn--outline-secondary" href="javascript:history.back()">Back</a>
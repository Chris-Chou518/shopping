<h1>賣場後台</h1>
<a href="/admin/items/create">
  <button class="btn btn-primary">新增商品</button>
</a>
<br />
<br />
<table class="table align-middle"> 
  <thead class="table-info thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each items}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.price}}</td>
        <td>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/items/{{this.id}}">Show</a>
          </button>
          <button type="button" class="btn btn-link">
            <a class="btn btn-link link-primary" href="/admin/items/{{this.id}}/edit">Edit</a>
          </button>
          <form action="/admin/items/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link link-danger">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>


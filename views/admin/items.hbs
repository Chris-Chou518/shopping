{{> admin-tab-switch route='items'}}
<a href="/admin/items/create">
  <button class="btn btn-primary">新增商品</button>
</a>
<br />
<br />
<table class="table align-middle"> 
  <thead class="table-info thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each items}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.Category.name}}</td>
        <td>{{this.price}}</td>
        <td>
          <button type="button" class="btn btn-light text-primary">
            <a href="/admin/items/{{this.id}}">Show</a>
          </button>
          <button type="button" class="btn btn-light text-primary">
            <a href="/admin/items/{{this.id}}/edit">Edit</a>
          </button>
          <form action="/admin/items/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-light text-danger" onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>


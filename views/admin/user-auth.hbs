{{> admin-tab-switch route='users'}}
<br />
<br />
<table class="table align-middle">
  <thead class="table-danger thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>
        {{#if this.isAdmin}}
          admin
        {{else}}
          user
        {{/if}}
      </td>
      <td>
        {{#if this.isAdmin}}
          <form action="/admin/users/{{this.id}}?_method=patch" method="post" style="display: inline;">
            <input type="hidden">
            <button type="submit" class="btn btn-light text-primary" onclick="return confirm(`確定調整{{this.name}}權限嗎`)">Set as user</button>
          </form>
        {{else}}
          <form action="/admin/users/{{this.id}}?_method=patch" method="post" style="display: inline;">
            <input type="hidden">
            <button type="submit" class="btn btn-light text-primary" onclick="return confirm(`確定調整{{this.name}}權限嗎`)">Set as admin</button>
          </form>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>